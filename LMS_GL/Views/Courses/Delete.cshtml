@model LMS_GL.Models.Courses

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-danger">Delete Product</h2>
<form asp-action="Delete" method="post" enctype="multipart/form-data">
    <div class="p-4 rounded border row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="CategId"/>
        <div class="col-1"></div>
        <div class="col-7">
            <div class="form-group row mb-2">
            <div class="col-3">
                <label asp-for="category" ></label>
            </div>
            <div class="col-5">
                <input asp-for="category.CategoryName" readonly="readonly"  class="form-control"/>
            </div>
            <span asp-validation-for="category" class="text-danger"></span>
        </div>
        <div class="form-group row mb-2">
            <div class="col-3">
                <label asp-for="Coursename"></label>
            </div>
            <div class="col-5">
                <input asp-for="Coursename" readonly="readonly" class="form-control"/>
            </div>
            <span asp-validation-for="Coursename" class="text-danger"></span>
        </div>
        <div class="form-group row mb-2">
            <div class="col-3">
                <label asp-for="Price"></label>
            </div>
            <div class="col-5">
                <input asp-for="Price" readonly="readonly" class="form-control"/>
            </div>
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-group row mb-2">
            <div class="col-3">
                <label asp-for="Description"></label>
            </div>
            <div class="col-5">
               
                <input asp-for="Description" readonly="readonly" class="form-control"/>
            </div>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group row mb-2">
            <div class="col-3">
                <label asp-for="duration"></label>
            </div>
            <div class="col-5">
                
                <input asp-for="duration" readonly="readonly" class="form-control"/>
            </div>
            <span asp-validation-for="duration" class="text-danger"></span>
        </div>
        <div class="form-group row mb-2">
            <div class="col-3">
                <label asp-for="MentorName"></label>
            </div>
            <div class="col-5">
                <input asp-for="MentorName" readonly="readonly" class="form-control"/>
            </div>
            <span asp-validation-for="MentorName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-action="Delete" asp-route-id="@Model.CourseId" type="submit" class="btn btn-danger" value="Delete"/>
            <a asp-action="Index" class="btn btn-primary">Back to list</a>

        </div>
        </div>
        
        @*<div class="col-1"></div>*@
        <div class="col-3">
            
            <img src="~/@Model.ImagePath" width="100%" style="border-radius:5px; border:1px solid #efefef"/>
            
        </div>
        <div class="col-1"></div>
    </div>
    
</form>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }