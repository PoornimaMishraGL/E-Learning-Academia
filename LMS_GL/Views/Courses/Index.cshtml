@model IEnumerable<LMS_GL.Models.Courses>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-6">
        <h2 class="text-info"> Course List</h2>
    </div>
    <div class="col-6 text-end">
        <a class="btn btn-info" asp-action="Create"><i class="bi bi-plus-circle"></i>&nbsp; Create New</a>
    </div>
</div>
<div>
    <table class="table table-striped border" id="myTable">
        <thead>
            <tr class="table-info">
            <th> @Html.DisplayNameFor(c=>c.Coursename)</th>
            <th> @Html.DisplayNameFor(c=>c.category)</th>
@*            <th> @Html.DisplayNameFor(c=>c.ImagePath)</th>*@
            <th width="25%"> @Html.DisplayNameFor(c=>c.Description)</th>
            <th> @Html.DisplayNameFor(c=>c.MentorName)</th>
            <th> @Html.DisplayNameFor(c=>c.duration)</th>
            <th> @Html.DisplayNameFor(c=>c.Price)</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
            @foreach(var item in Model){
                <tr>
                    <td> @item.Coursename</td>
                    <td> @item.category.CategoryName</td>
                    @*<td> <img src="@Url.Content(@item.ImagePath)" width="150" /></td>*@
                    <td> @item.Description</td>
                    <td> @item.MentorName</td>
                    <td> @item.duration</td>
                    <td> @item.Price</td>

                    <td style="width:150px">
                        <div class="btn-group">
                            <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.CourseId"><i class="bi bi-pencil-square"></i></a>
                            <a asp-action="Details" class="btn btn-success"  asp-route-id="@item.CourseId"><i class="bi bi-ticket-detailed"></i></a>
                            <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.CourseId"><i class="bi bi-trash3"></i></a>
                            <a asp-action="Add_to_cart" class="btn btn-warning" asp-controller="Carts" asp-route-id="@item.CourseId" asp-route-stuid="1"><i class="bi bi-cart-check"></i></a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@section Scripts{
    <script type="text/javascript">
        $(document).ready(function() {
        $('#myTable').DataTable( );
        } );
    </script>
}