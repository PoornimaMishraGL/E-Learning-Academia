@model IEnumerable<LMS_GL.Models.Category>

@{
    ViewData["Title"] = "Index";
}



<div class="row">
    <div class="col-6">
        <h2 class="text-info">
            Product Type List
        </h2>
    </div>
    <div class="col-6 text-end">
        <a class="btn btn-info" asp-action="create">&nbsp; Create New</a>
    </div>
</div>
<div>
    <table class="table table-striped border">
        <tr>
            <th> @Html.DisplayNameFor(c=>c.CategoryName)</th>
            <th></th>
        </tr>
        
            @foreach(var item in Model){
                <tr>
                    <td>
                        @item.CategoryName
                    </td>
                    <td>
                        <a asp-route-id="@item.CategId" asp-action="AssignCourses">List All Courses</a>
                    </td>
                    <td style="width:150px">
                        <div class="btn-group">
                            <a asp-action="Edit" class="btn btn-primary"  asp-route-id="@item.CategId"><i class="bi bi-pencil-square"></i></a>
                            <a asp-action="Details" class="btn btn-success" asp-route-id="@item.CategId"><i class="bi bi-ticket-detailed"></i></a>
                            <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.CategId"><i class="bi bi-trash3"></i></a>

                        </div>
                    </td>
                </tr>
            }
    </table>
</div>
