@model LMS_GL.Models.Category

@{
    ViewData["Title"] = "Details";
}

<h2 class="text-info">Details Product</h2>
<form asp-action="Details" method="post">
    <div class="p-4 rounded border">
        @*<input type="hidden" asp-for="Id"/>*@
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="CategoryName"></label>
            </div>
            <div class="col-5">
                <input asp-for="CategoryName" readonly="readonly"  class="form-control"/>
            </div>
            
        </div>
        <div class="form-group">
            <a asp-action="Edit" asp-route-id="@Model.CategId" class="btn btn-primary">Edit</a>
            <input asp-action="Index" type="submit" class="btn btn-primary" value="save"/>
            
        </div>
    </div>
    
</form>