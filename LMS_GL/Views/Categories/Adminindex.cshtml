@model IEnumerable<LMS_GL.Models.Category>

@{
    ViewData["Title"] = "Index";
}
<h1>Categories List</h1>
<div class="text-end">
                <a class="btn btn-primary" asp-action="create"><i class="bi bi-plus-circle"></i>&nbsp; Create New</a>
                </div>
 <div>
  <br />
    <table class="table table-striped border" id="myTable">
        <thead>
        <tr class="table-info">
            <th> @Html.DisplayNameFor(c=>c.CategoryName)</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
           @foreach(var item in Model){
                <tr>
                    <td>
                        @item.CategoryName
                    </td>
                    <td style="width:150px">
                        <div class="btn-group">
                             <a asp-route-id="@item.CategId" class="btn btn-info" asp-action="AssignCourses"><i class="bi bi-book-half"></i></a>
                            <a asp-action="Edit" class="btn btn-primary"  asp-route-id="@item.CategId"><i class="bi bi-pencil-square"></i></a>
                            <a asp-action="Details" class="btn btn-success" asp-route-id="@item.CategId"><i class="bi bi-ticket-detailed"></i></a>
                            <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.CategId"><i class="bi bi-trash3"></i></a>

                        </div>
                    </td>
                </tr>
            }
            </tbody>
    </table>
</div>

@section Scripts{
    <script type="text/javascript">
        $(document).ready(function() {
        $('#myTable').DataTable( );
        } );
    </script>
}