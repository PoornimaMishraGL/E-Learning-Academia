<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ImagePath)
            </th>
           @* <th>
                @Html.DisplayNameFor(model => model.student.FirstName)
            </th>*@
            @*<th>
                @Html.DisplayNameFor(model => model.courses)
